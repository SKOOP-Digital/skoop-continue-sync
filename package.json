{
  "name": "skoop-continue-sync",
  "displayName": "Skoop Continue Sync",
  "description": "Extension to synchronize Continue.dev settings for team members",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/JoshS/skoop-continue-sync"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:skoop-continue-sync.applyTeamSettings"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "skoop-continue-sync.applyTeamSettings",
        "title": "Apply Team Continue Settings"
      }
    ],
    "configuration": {
      "title": "Skoop Continue Sync",
      "properties": {
        "skoop-continue-sync.litellmUrl": {
          "type": "string",
          "default": "https://litellm.skoop.digital/",
          "description": "LiteLLM server URL"
        },
        "skoop-continue-sync.litellmApiKey": {
          "type": "string",
          "default": "sk-Phkcy9C76yAAc2rNAAsnlg",
          "description": "LiteLLM API key"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "npx @vscode/vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/mocha": "^10.0.6",
    "@types/glob": "^8.1.0",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "typescript": "^4.9.0",
    "mocha": "^10.2.0",
    "glob": "^10.3.10"
  },
  "dependencies": {
    "yaml": "^2.3.4",
    "fs-extra": "^11.1.1"
  }
}
